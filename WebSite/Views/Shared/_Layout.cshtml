<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Robert Dubrovskis</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.bundle.js")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/Scripts/UserScripts.js")
    @Styles.Render("~/Content/css")
    @RenderSection("scripts", required: false)

    <link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans:700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <a href="~/">
                <div id="titlebox">
                    <h3 class="headertitle" id="title">Robert Dubrovskis</h3>
                    <h4 class="headertitle" id="subtitle">Web Development and Digital Art</h4>
                </div>
            </a>
            <div id="resumebox" onclick="ResumeLink()"><h2>RESUME</h2></div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="navbar-fixed-bottom">
    <div class="container">
        <div id="namespace"><span>&copy;2018 - Robert Dubrovskis</span></div>
        <div id="socialmediaicons">
            <a href="https://github.com/rdubrovskis"><img class="socmedia" src="~/Images/github-white-icon.png" /></a>
            <a href="https://sirbronson.artstation.com"><img class="socmedia" src="~/Images/Artstation.png" /></a>
            <a href="https://www.linkedin.com/in/robertdubrovskis/"><img class="socmedia" src="~/Images/linkedin-4-24.png" /></a>
        </div>
    </div>
</footer>
</body>
</html>
