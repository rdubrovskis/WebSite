        @*<dd>
                <div class="display-foto">
                    <img src="@Url.Content(Model.ImageUrl)" />
                </div>
            </dd>*@


        <dd>
            <a data-toggle="modal" data-target="#@Html.DisplayNameFor(model => model.Id)"><img src="@Url.Content(Model.ImageUrl)" class="img-responsive gallery-thumb"></a>
            <div id="@Html.DisplayNameFor(model => model.Id)" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                            <div class="img-caption">
                                <h4 class="img-title">@Html.DisplayFor(model => model.Title)</h4>
                                <p>@Html.DisplayFor(model => model.Description)</p>
                            </div>

                        </div>
                        <div class="modal-body">
                            <img src="@Url.Content(Model.ImageUrl)" class="img-responsive">
                        </div>
                    </div>
                </div>
            </div>
        </dd>


    </dl>
</div>
